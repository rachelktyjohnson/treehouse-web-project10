extends layout

block content
    a(class='button back', href='/') < Back
    div(class='single-container')
        div(class='left')
            h1= book.title
            h2 Author:
            p= book.author
            h2 Genre:
            p= book.genre
            h2 Year:
            p= book.year
            hr
            a(class='button edit', href='/') Edit Book
            a(class='button delete', href='/') Delete Book
        div(class='right')
            img(src="https://placekitten.com/200/300" alt=book.title)